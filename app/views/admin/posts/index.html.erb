<h1>文章列表</h1>
<%= link_to "新增文章", new_admin_post_path %>
<% @posts.each do |post| %>
  <div id='plant_img'><%= image_tag post.photo.url, :class => 'plant_img' %></div>
  <p><%= post.title %></p>
  <p><%= post.content %></p>
  <p>
    <% post.plants.each do |plant| %>
      <%= plant.description %>
    <% end %>
  </p>
  <%= link_to "瀏覽", admin_post_path(post) %>
  <%= link_to "修改", edit_admin_post_path(post) %>
  <%= link_to "刪除", admin_post_path(post), :method => :delete %>
<% end %>
